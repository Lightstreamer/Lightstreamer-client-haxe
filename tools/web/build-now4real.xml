<project name="Web client library" 
  default="package" 
  basedir="../..">

  <description>
  Buildfile for the Web client library
  </description>

  <property name="tools" location="tools/web"/>

  <target name="package" description="Build the library">
    <ant antfile="${tools}/build-now4real-log.xml">
      <target name="package"/>
    </ant>
    <ant antfile="${tools}/build-now4real-nolog.xml">
      <target name="package"/>
    </ant>
    <delete file="bin/web/build/now4real.zip"/>
    <zip destfile="bin/web/build/now4real.zip"
     basedir="bin/web/build/dist-now4real"/>
  </target>

  <target name="clean" description="Clean the project">
    <ant antfile="${tools}/build-now4real-log.xml">
      <target name="clean"/>
    </ant>
     <ant antfile="${tools}/build-now4real-nolog.xml">
      <target name="clean"/>
    </ant>
  </target>
</project>